FROM node:18-alpine  

WORKDIR /app

ARG DB_PASSWORD
ARG DB_HOST
ARG DB_PORT
ARG DB_USER
ARG DB_NAME

ENV DB_PASSWORD $DB_PASSWORD
ENV DB_HOST $DB_HOST
ENV DB_PORT $DB_PORT
ENV DB_USER $DB_USER
ENV DB_NAME $DB_NAME

COPY package*.json ./  

RUN npm install

COPY . .

RUN npm run build

EXPOSE 3000

CMD ["npm", "run", "dev"]
